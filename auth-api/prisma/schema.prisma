generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

// Também é possível gerar o client desta forma abaixo (ficará na pasta padrão node_modules/@prisma/client):
// generator client {
//   provider = "prisma-client-js"
// }

datasource db {
  provider = "postgresql"
}

// Entidades do banco de dados
model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
}
